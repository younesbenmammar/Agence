{% extends 'base.html.twig' %}

{% block title %}
Gérer les biens 
{%endblock%}
{% block body %}
<div class="container mt-4">
    <h2>Gérer les biens</h2>
    {% for message in app.flashes('succes') %}
    <div class="alert alert-succes">
        {{ message }}

    </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bien in biens %}
        <tr>
            <td>{{bien.title}}</td>
            <td>
                <a href="{{path('admin.bien.edit', {id :bien.id }) }}" class="btn btn-secondary">Editer</a>
                <form method="post" action="{{path('admin.bien.delete', {id:bien.id}) }} "style="display: inline-block" onsubmit="return confirm('Êtes vous sur de vouloir supprimer ce bien ?')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{csrf_token('delete' ~ bien.id)}}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </td>
        </tr>
        {% endfor %}


            
        </tbody>
    </table>
    <div class="text-right">
        <a href="{{path('admin.bien.create')}}" class="btn btn-primary">Crée un nouveau bien </a>
    </div>

</div>

           
    </div>
</div>

{% endblock %}