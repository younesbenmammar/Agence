        <div class="col md-4">{{form_row(form.prix)}}</div>

    </div>
    <div class="row">
        <div class="col md-2">{{form_row(form.chambres)}}</div>
        <div class="col md-2">{{form_row(form.pieces)}}</div>
        <div class="col md-2">{{form_row(form.chauffage)}}</div>
        <div class="col md-2">{{form_row(form.etage)}}</div>


    </div>
    <div class="row">
        <div class="col md-2">{{form_row(form.ville)}}</div>
        <div class="col md-2">{{form_row(form.code_postale)}}</div>
        <div class="col md-8">{{form_row(form.description)}}</div>
