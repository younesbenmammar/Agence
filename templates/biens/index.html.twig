{% extends 'base.html.twig' %}

{% block title %}
    Tous nos biens
{% endblock %}
{% block body %}
    <div class="jumbotron">


            <div class="container">
                {{ form_start(form) }}
                <div class="form-row align-items-end">
                    <div class="col">
                        {{ form_row(form.PrixMax) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.SurfaceMin) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.options) }}
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <button class="btn btn-primary">Rechercher</button>

                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="container mt-4">
    <h1>Les biens de notre Agence</h1>
        <div class="row">

            {% for bien in biens %}
                <div class="col-md-4">
                    {{ include('biens/_bien.html.twig') }}

                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(biens) }}
        </div>



{% endblock %}